{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/join/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/drafts/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/display",
      "dest": "/index.html"
    },
    {
      "src": "/results",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_SERVER_URL": "https://shoof-howlz-backend.onrender.com"
  }
}